async function createSession(token) {
  const currentTime = Date.now();

  if (
    !ltpaToken ||
    (tokenExpirationTime && currentTime >= tokenExpirationTime)
  ) {
    console.log("LTPA token expired or not found, obtain a new token.");
    // await getLtpaToken();
  }

  return new Session({
    hostname: "tplavipa.1dc.com",
    port: 443,
    rejectUnauthorized: false,
    // Specify LTPA token type and value on the session object.
    type: "token",
    tokenType: "LtpaToken2",
    tokenValue: token,
  });
}
