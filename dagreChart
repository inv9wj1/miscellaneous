const { exec } = require('child_process');

// Function to simulate keystrokes
function simulateKeystroke() {
    // Execute PowerShell command to simulate Ctrl + S keystroke
    exec('powershell.exe -Command "[System.Reflection.Assembly]::LoadWithPartialName(\'System.Windows.Forms\'); [System.Windows.Forms.SendKeys]::SendWait(\'^s\')"', (error, stdout, stderr) => {
        if (error) {
            console.error(`Error: ${error.message}`);
            return;
        }
        if (stderr) {
            console.error(`stderr: ${stderr}`);
            return;
        }
        console.log(`Keystroke simulation successful`);
    });
}

// Simulate keystroke every 2 minutes
setInterval(simulateKeystroke, 2 * 60 * 1000);